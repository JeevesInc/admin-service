{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "@services": ["services/index"],
      "@middlewares": ["middlewares/index"],
      "@constants": ["constants/index"],
      "@errors": ["errors/index"],
      "@utils": ["utils/index"],
      "@models": ["db/models/index"],
      "@repositories": ["db/models/repository/index"],
      "@jeeves-repositories": ["db/jeeves/repository/index"],
      "@types": ["types/index"],
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
}
